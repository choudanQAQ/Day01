         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/lv"></ListView>

     <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:onClick="btn_clear"
         android:text="清空历史搜索"/>



</LinearLayout>